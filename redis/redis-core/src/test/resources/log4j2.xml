<?xml version="1.0" encoding="UTF-8"?>
<configuration status="info"  packages="com.ctrip.xpipe.utils.log">

    <appenders>
        <console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="[%d{HH:mm:ss:SSS}][%p][%t][%c{1}]%m%xpEx{filters(org.junit,org.eclipse.jdt.internal,org.apache.maven.surefire,org.mockito,org.apache.catalina,org.springframework.web,com.dianping.cat)}%n"/>
        </console>

        <RollingFile name="RollingFileInfo" fileName="target/applogs/xpipe/xpipe-test.log"
                     filePattern="target/applogs/xpipe/xpipe-test-%d{yyyy-MM-dd}-%i.log">
            <Filters>
                <ThresholdFilter level="INFO"/>
                <ThresholdFilter level="WARN" onMatch="DENY" onMismatch="NEUTRAL"/>
            </Filters>
            <PatternLayout pattern="[%d{HH:mm:ss:SSS}][%p][%t][%c{1}]%m%xpEx{filters(org.junit,org.eclipse.jdt.internal,org.apache.maven.surefire,org.mockito,org.apache.catalina,org.springframework.web,com.dianping.cat)}%n"/>
            <Policies>
                <TimeBasedTriggeringPolicy/>
                <SizeBasedTriggeringPolicy size="100 MB"/>
            </Policies>
        </RollingFile>

    </appenders>

    <loggers>
        <!--过滤掉spring和hibernate的一些无用的debug信息-->
        <logger name="org.springframework" level="INFO"/>
        <logger name="org.hibernate" level="INFO"/>
        <logger name="io.netty" level="INFO"/>
		<logger name="org.apache.zookeeper" level="WARN"/>
        <logger name="com.ctrip.xpipe.lifecycle.CreatedComponentRedistry" level="WARN"/>
		<logger name="com.ctrip.xpipe.lifecycle.SpringComponentRegistry" level="WARN"/>
		<logger name="com.ctrip.xpipe.lifecycle.DefaultLifecycleState" level="WARN"/>
		<!--  
		<logger name="io.netty.handler.logging.LoggingHandler" level="DEBUG"/>
		-->
        <root level="INFO">
            <appender-ref ref="Console"/>
            <appender-ref ref="RollingFileInfo"/>
        </root>
    </loggers>

</configuration >